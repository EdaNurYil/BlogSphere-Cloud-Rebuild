<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <title>Document</title>
</head>
<body>
    <main>
        <div class ="container">
            <h1>Article</h1>
            <% if (error) {%>
                <div class ="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Category</th>      
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% articles.forEach(article => { %>
                            <tr>
                                <td><a href="/articles/<%= article.id %>"><%= article.title %></a></td>
                                <td><a href="/articles?category=<%= article.categoryId %>"><%= article.categoryName %></a></td>
                                <td><%= article.author %></td>
                                <td><%= article.date %></td>
    
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
        </div>
    </main>
</body>
</html>